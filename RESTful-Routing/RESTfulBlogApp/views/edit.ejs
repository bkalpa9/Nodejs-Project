<% include ./partials/header %>
  <div class="ui main text container segment">
    <div class="ui huge header">Edit
      <%= blog.title %>
    </div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="post">
      <div class="field">
        <label>Title</label>
        <input name="blog[title]" value="<%= blog.title %>" type="text">
      </div>
      <div class="field">
        <label>Image</label>
        <input name="blog[image]" value="<%= blog.image %>" type="text">
      </div>
      <div class="field">
        <label>Blog Contents</label>
        <textarea name="blog[body]"><%= blog.body %></textarea>
      </div>
      <input class="ui violet big basic button" type="submit" value="Post">
    </form>
  </div>
  <% include ./partials/footer %>
